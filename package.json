{
  "name": "budgetary",
  "version": "1.0.0",
  "description": "Budgetary is an intuitive, open-source desktop application designed to help individuals and small businesses track their expenses and manage their budgets effortlessly. Built for simplicity and functionality.",
  "main": "./out/main/index.js",
  "author": "Ali Alibrahimi",
  "homepage": "https://github.com/CodeWithAli-Co/Budgetary",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.21.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@tanstack/react-form": "^0.41.2",
    "@tanstack/react-router": "^1.92.11",
    "@types/axios": "^0.9.36",
    "@types/keytar": "^4.4.0",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "lucide-react": "0.469.0",
    "plotly.js": "^2.35.3",
    "plotly.js-dist": "^2.35.3",
    "react-grid-layout": "^1.5.1",
    "react-plaid-link": "^3.6.1",
    "react-resizable": "^3.0.5",
    "recharts": "^2.15.0",
    "swapy": "^1.0.5",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@shadcn/ui": "^0.0.4",
    "@tanstack/router-devtools": "^1.92.11",
    "@tanstack/router-plugin": "^1.92.11",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.6"
  }
}
